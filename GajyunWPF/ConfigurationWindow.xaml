<Window Background="#FFEAF1EF" x:Class="GajyunWPF.ConfigurationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Configuration" Height="188" Width="547" ResizeMode="NoResize" Icon="/jiro_icon.ico">
    <StackPanel Margin="10,10,10,0" Height="146" VerticalAlignment="Top">
        <TextBlock Text="PDFの場所:"/>
        <StackPanel Orientation="Horizontal">
            <TextBox x:Name="pdfFolderPathTextBox" Margin="0,5" Width="484"/>
            <Button Content="..." Margin="5" Click="BrowsePdfFolder_Click"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal"/>

        <TextBlock Text="CSVの場所:"/>
        <StackPanel Orientation="Horizontal">
            <TextBox x:Name="CsvPathTextBox" Margin="0,5" Width="484"/>
            <Button Content="..." Margin="5" Click="BrowseCsvFolder_Click"/>
        </StackPanel>

        <Button Content="Save" HorizontalAlignment="Left" Margin="0,15,0,0" Click="SaveButton_Click" Width="90"/>
    </StackPanel>
</Window>
